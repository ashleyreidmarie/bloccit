<div class="row">
  <div class="col-md-8">
    <div class="media">
      <br />
      <% avatar_url = @user.avatar_url(128) %>
      <% if avatar_url %>
        <div class="media-left">
          <%= image_tag avatar_url, class: 'media-object' %>
        </div>
      <% end %>
      <div class="media-body">
        <h2 class="media-heading"><%= @user.name %></h2>
        <small>
          <%= pluralize(@user.posts.count, 'post') %>
          <%= pluralize(@user.comments.count, 'comment') %>
        </small>
      </div>
    </div>
  </div>
</div>
<div class="row">
  <div class="col-md-3 pull-right">
    <h2>Favorites</h2>
    <% unless @favorites.empty? %>
      <% @favorites.each do |favorite| %>
        <%= render partial: 'favorites/user_favorites', locals: { favorite: favorite } %>
      <% end %>
    <% else %>
      <p>No Current Favorites</p>
    <% end %>
  </div>
  <div class="col-md-8">
    <% unless @posts.empty? %>
      <h2>Posts</h2>
      <%= render @posts %>
    <% else %>
      <h3></h3><%= @user.name %> has not submitted any posts yet.</h3>
    <% end %>
    
    <% unless @comments.empty? %>
      <h2>Comments</h2>
      <%= render @comments %>
    <% else %>
      <h3></h3><%= @user.name %> has not submitted any comments yet.</h3>
    <% end %>
  </div>
</div>
