<div class="row">
  <div>
   <h1>All Posts</h1>
  </div>
  <div>
   <%= link_to "New Post", "/posts/new", class: 'btn btn-primary' %>
 </div>
</div>

<% @posts.each do |post| %>
  <div class="media">
    <div class="media-body">
      <h4 class="media-heading">
          <%= link_to post.title, post %>
      </h4>
    </div>
  </div>
<% end %>
  

 
