<div class="row">
  <div class="col-md-3">
   <h1>All Posts</h1>
  </div>
  <div class="col-md-1">
   <%= link_to "New Post", new_post_path, class: 'btn btn-primary' %>
  </div>
</div>

<% @posts.each do |post| %>
  <div class="media">
    <div class="media-body">
      <h4 class="media-heading">
          <%= link_to post.title, post %>
      </h4>
    </div>
  </div>
<% end %>
  

 
